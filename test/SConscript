from os.path import join, dirname, abspath
Import('context root_dir gtest')

def Build():
  conf = Configure(context.Clone())
  conf.CheckLib('pthread')
  env = conf.Finish()
  env.Append(CPPPATH=[join(root_dir, 'test')])
  return env.Program('cctest', [Glob('*.cc'), gtest])

program = Build()
Return('program')
